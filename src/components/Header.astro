---
const { lang = 'es', current = '' , pathEs = '/es/', pathEn = '/en/'} = Astro.props;

const navEs = [
  { href: '/es/', label: 'Inicio', key: 'home' },
  { href: '/es/portfolio/', label: 'Portfolio', key: 'portfolio' },
  { href: '/es/sobre-mi/', label: 'Sobre m√≠', key: 'about' },
  { href: '/es/clientes/', label: 'Clientes', key: 'clients' },
  { href: '/es/contacto/', label: 'Contacto', key: 'contact' }
];
const navEn = [
  { href: '/en/', label: 'Home', key: 'home' },
  { href: '/en/portfolio/', label: 'Portfolio', key: 'portfolio' },
  { href: '/en/about/', label: 'About', key: 'about' },
  { href: '/en/clients/', label: 'Clients', key: 'clients' },
  { href: '/en/contact/', label: 'Contact', key: 'contact' }
];
const items = lang === 'en' ? navEn : navEs;
const otherHref = lang === 'en' ? pathEs : pathEn;
const otherLabel = lang === 'en' ? 'ES' : 'EN';
---
<header class="site">
  <div class="container header-inner">
    <a class="brand" href={lang === 'en' ? '/en/' : '/es/'}>Aisha.photo</a>
    <nav>
      {items.map(i => (
        <a href={i.href} class={current === i.key ? 'active' : ''}>{i.label}</a>
      ))}
      <a class="lang" href={otherHref} aria-label="switch language">{otherLabel}</a>
    </nav>
  </div>
</header>
